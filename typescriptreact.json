{
	// React
	"ReactDOM Render Root": {
		"prefix": "tsx-render",
		"body": [
			"import React from 'react';",
			"import ReactDOM from 'react-dom';",
			"",
			"const rootEl = document.createElement('div');",
			"document.body.appendChild(rootEl);",
			"",
			"// TODO: Assign a root component to <Root />",
			"ReactDOM.render(<Root />, rootEl);"
		]
	},
	"React ChangeEvent Handler": {
		"prefix": "tsx-changeev",
		"body": [
			"${1:handlerName}(event: React.ChangeEvent<HTMLInputElement>) {",
			"  const value = event.target.value;",
			"}"
		]
	},
	"React Component": {
		"prefix": "tsx-comp",
		"body": [
			"interface ${1:name}Props {",
			"  ",
			"}",
			"interface ${1:name}States {",
			"  ",
			"}",
			"",
			"class ${1:name}Component extends React.Component<${1:name}Props, ${1:name}States> {",
			"  constructor(props: ${1:name}Props) {",
			"    super(props);",
			"    this.state = {",
			"      ",
			"    };",
			"  }",
			"  render() {",
			"    return (",
			"      <div></div>",
			"    );",
			"  }",
			"}"
		]
	}
}